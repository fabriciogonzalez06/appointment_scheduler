<div class="row d-flex justify-content-center mt-5" >
    <div class="col-md-6 col-sm-12 col-xs-12" >

        <div class="card">
            <div class="card-body" >
                <h1>Sign Up</h1>
                <%= form_with model: @user, url: sign_up_path do |f| %>

                    <% invalid = @user.errors.include?(:email) %>
                    <div class="mb-3" >
                        <%= f.label :email, class: 'form-label' %>
                        <%= f.text_field :email, class: "form-control  #{'is-invalid' if invalid}" %>

                        <% if invalid %>
                            <div class="invalid-feedback d-block">
                                <% @user.errors.full_messages_for(:email).each do |error_message| %>
                                <%= error_message %>.
                                <% end %>
                            </div>
                        <% end %>
                    </div>

                    <% invalid = @user.errors.include?(:password) %>
                    <div class="mb-3" >
                        <%= f.label :password, class: 'form-label' %>
                        <%= f.text_field :password, class: "form-control #{'is-invalid' if invalid}" %>

                          <% if invalid %>
                            <div class="invalid-feedback d-block">
                                <% @user.errors.full_messages_for(:password).each do |error_message| %>
                                <%= error_message %>.
                                <% end %>
                            </div>
                        <% end %>
                    </div>

                    <% invalid = @user.errors.include?(:password_confirmation) %>
                    <div class="mb-3" >
                        <%= f.label :password_confirmation, class: 'form-label' %>
                        <%= f.text_field :password_confirmation, class: "form-control #{'is-invalid' if invalid} " %>

                          <% if invalid %>
                            <div class="invalid-feedback d-block">
                                <% @user.errors.full_messages_for(:password_confirmation).each do |error_message| %>
                                <%= error_message %>.
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                   
                   <div class="d-grid gap-2" >
                    <%= f.submit 'Sign Up', class:  'btn btn-primary' %>
                    <%= link_to 'Back', root_path , class: 'btn btn-secondary' %>
                     <%= link_to 'Sign In', sign_in_path, class: 'btn btn-link' %>
                   </div>
                    
                <% end %>
            </div>
        </div>

    </div>
</div>

