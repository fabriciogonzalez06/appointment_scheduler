<h1>Edit Password</h1>

<%= form_with model: Current.user, url: edit_password_path do |f| %>

    <div>
        <%= f.label :password %>
        <%= f.text_field :password %>
    </div>

    <div>
        <%= f.label :password_confirmation %>
        <%= f.text_field :password_confirmation %>
    </div>

    <div>
        <%= f.submit 'Update password' %>
    </div>
<% end %>